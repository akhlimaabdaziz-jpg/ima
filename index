<body>
  <!-- Stickman -->
  <div class="stickman">
    <img src="stickman.png" alt="Stickman">
  </div>

  <!-- Floating hearts container -->
  <div id="hearts-container"></div>

  <!-- Pixel Love message -->
  <div class="message">
    abiu
    <span class="emoji">ðŸ˜‰</span>
  </div>

  <!-- Retro click sound -->
  <audio id="clickSound" src="coin.wav" preload="auto"></audio>

  <script>
    // Floating hearts
    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("floating-heart");
      heart.innerHTML = "â¤ï¸";
      heart.style.left = Math.random() * 90 + "%";
      heart.style.fontSize = Math.random() * 20 + 25 + "px";

      const floatDuration = Math.random() * 3 + 4;
      const driftDuration = Math.random() * 2 + 2;
      heart.style.animationDuration = `${floatDuration}s, ${driftDuration}s`;

      document.getElementById("hearts-container").appendChild(heart);

      setTimeout(() => heart.remove(), floatDuration * 1000);
    }
    setInterval(createHeart, 800);

    // Confetti
    function createConfetti() {
      const confetti = document.createElement("div");
      confetti.classList.add("confetti");
      confetti.style.left = Math.random() * 100 + "%";
      confetti.style.top = "100%";
      confetti.style.background = `hsl(${Math.random() * 360}, 100%, 70%)`;
      confetti.style.animationDuration = (Math.random() * 3 + 3) + "s";

      document.getElementById("hearts-container").appendChild(confetti);
      setTimeout(() => confetti.remove(), 6000);
    }
    setInterval(createConfetti, 500);

    // Click = pop heart
    document.body.addEventListener("click", (e) => {
      const heart = document.createElement("div");
      heart.classList.add("pop-heart");
      heart.innerHTML = "ðŸ’–";
      heart.style.left = e.pageX + "px";
      heart.style.top = e.pageY + "px";
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 1000);

      // Play retro click sound
      const sound = document.getElementById("clickSound");
      sound.currentTime = 0;
      sound.play();
    });
  </script>
</body>
